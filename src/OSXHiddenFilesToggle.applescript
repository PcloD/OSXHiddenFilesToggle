on run {input, parameters}		tell (activate) -- get focus	end tell		set choice to choose from list {"HIDE", "SHOW"} with prompt "HIDE or SHOW hidden files:" with title "hide/show"		if choice as string is equal to "HIDE" then		if (do shell script "defaults read com.apple.finder AppleShowAllFiles") is equal to "YES" then			do shell script "defaults write com.apple.finder AppleShowAllFiles NO"			do shell script "killall Finder"		end if	else if choice as string is equal to "SHOW" then		if (do shell script "defaults read com.apple.finder AppleShowAllFiles") is equal to "NO" then			do shell script "defaults write com.apple.finder AppleShowAllFiles YES"			do shell script "killall Finder"		end if	else			end if		return inputend run